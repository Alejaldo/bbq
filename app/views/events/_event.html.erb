<div class="col-sm-6 col-md-4 event-window">
  <div class="thumbnail">

    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url('https://images.musement.com/cover/0001/55/chamonix-mont-blanc-day-trip-from-geneva_header-54010.jpeg?lossless=false&auto=format&fit=clip&h=677.59375&w=636.296875')" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%= link_to event.title, event_path(event) %></h3>
          <h3>
            <small><%= l event.datetime, format: :short %></small>
          </h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
</div>
