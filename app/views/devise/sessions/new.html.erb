<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">

      <h2 class="text-center login-title">Вход</h2>
      <div class="account-wall">

        <div class="form-signin">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.label :email, 'Электронный адрес' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "Ваш пароль", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Войти", class: 'btn btn-lg btn-primary btn-block' %>
            </div>

          <% end %>
        </div>
      </div>

      <div class="text-center new-account">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
