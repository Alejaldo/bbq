<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag(user_avatar(@user), class: 'img-icon') %>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to t('button.edit_profile'),
      edit_user_path(@user), class: 'btn btn-default' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('titles.organized_by') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('titles.user_have_no_events') %></p>
      <% end %>
    </div>
  </div>
</div>
